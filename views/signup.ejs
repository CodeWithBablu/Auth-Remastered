<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="relative w-full h-screen">

  <div class="bgImg z-0 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-screen h-full">
    <img class=" w-full h-full object-cover" src="/images/common/login.jpg" alt="">
  </div>

  <div class="login relative z-20 w-full h-full flex justify-center items-center">

    <div class="flex w-full sm:w-[500px] lg:w-[800px] rounded-xl bg-blackAplha600 p-5 sm:p-10">

      <div class="w-1/3 hidden lg:flex justify-center items-center">
        <div class=" text-teal-500 p-3 border-b-2 border-r-2 rounded-xl border-indigo-500">
          <h1 class=" text-5xl font-neumachina font-bold">Auth</h1>
          <h3 class=" text-zinc-300 text-lg">Re-mastered</h3>
        </div>
      </div>

      <div class="w-full lg:w-2/3 flex justify-center">

        <div class="flex flex-col flex-grow items-center gap-3 md:gap-5">

          <h1 class=" text-3xl md:text-5xl font-poppins font-semibold">SignUp</h1>

          <div
            class=" w-full text-lg md:text-xl flex gap-2 items-center justify-center rounded-md bg-gray-600/30 p-2 md:p-4">
            <div class="w-6 h-6"><img class="w-full h-full object-cover" src="/images/logo/google.svg" alt=""></div>
            <h2>Continue with Google</h2>
          </div>

          <div
            class=" w-full text-lg md:text-xl flex gap-2 items-center justify-center rounded-md bg-gray-600/30 p-2 md:p-4">
            <div class="w-6 h-6"><img class="w-full h-full object-cover" src="/images/logo/facebook.svg" alt=""></div>
            <h2>Continue with facebook</h2>
          </div>

          <div class=" m-auto">--------------- or ----------------</div>

          <form class=" flex flex-col gap-4 w-full" action="/auth/create" method="post">

            <input
              class=" w-full px-6 py-3 text-lg rounded-md outline-none border-2 border-zinc-700 bg-zinc-900 focus:border-teal-200"
              type="text" name="name" id="name" placeholder="Name" autocomplete="on" required>

            <input
              class=" w-full px-6 py-3 text-lg rounded-md outline-none border-2 border-zinc-700 bg-zinc-900 focus:border-teal-200"
              type="email" name="email" id="email" placeholder="Email" autocomplete="on" required>

            <input
              class=" w-full px-6 py-3 text-lg rounded-md outline-none border-2 border-zinc-700 bg-zinc-900 focus:border-teal-200"
              type="password" name="password" id="password" placeholder="Password" autocomplete="current-password"
              required>

            <input
              class=" w-full px-6 py-3 text-lg rounded-md outline-none border-2 border-zinc-700 bg-zinc-900 focus:border-teal-200"
              type="password" name="cpassword" id="cpassword" placeholder="Confirm Password"
              autocomplete="current-password" required>

            <!-- <div class="g-recaptcha" data-sitekey="6LfddKgpAAAAAOXVhgw38mcATYmisO_cswENpw3t"></div> -->
            <span class="flex items-center gap-1 text-xs md:text-sm">
              <input class=" w-4 h-4 mr-2" type="checkbox" name="agree" id="agree" required>
              <span>
                I agree to
                <b class=" text-blue-400 underline">Terms of service </b> and
                <b class=" text-blue-400 underline">Privacy policy</b>
              </span>
            </span>
            <span class=" text-md md:text-lg">
              Welcome back, savvy adventurer!
              <a href="/auth/signin"><b class=" cursor-pointer text-blue-400 underline">Login </b></a>
            </span>
            <button
              class=" text-xl font-poppins font-semibold text-gray-800 bg-gradient-to-r from-gray-100 to-lime-500 to-70% px-6 py-2 rounded-md">SignUp</button>
          </form>
        </div>

      </div>

    </div>

  </div>

</div>